<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
          <%= link_to "写真を投稿する", new_photo_path, class: 'btn btn-default' %>
    <% @photos.each do |photo| %>
      <div class="row">
        <p>タイトル：<%= photo.title %></p>
        <p>説明：<%= photo.content %></p>
        <%= link_to "編集", edit_photo_path(photo.id),data: { confirm: '本当に編集しますか？'}, class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", photo_path(photo.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
